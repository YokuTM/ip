<p>
<?php
$a = rand(-20,20);
$c = rand(-20,20);
$d = rand(-20,20);
if ($c+$a == 1){
  echo "ошибка";
} else{
$b = (2*$c-42*$d)/($c+$a-1);
if($d<0){
echo '(2*' . $c . '+42*' . abs($d) . ')/(' . $c . '+' . $a . '-1)<br/>';
} else{
echo '(2*' . $c . '-42*' . $d . ')/(' . $c . '+' . $a . '-1)<br/>';
}
echo 'ответ =' . round($b);
}
?>
